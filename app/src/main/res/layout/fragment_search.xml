<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchFragment"
    tools:context="ru.photosides.mymap.SearchFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:singleLine="true"
            android:id="@+id/editTextSearch"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="@string/around_me"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:id="@+id/buttonAroundMe"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="@string/text_search"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:id="@+id/buttonTextSearch"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/favourites"
                android:scaleType="centerCrop"
                android:id="@+id/imageButtonFavourites"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewSearch"/>

    </LinearLayout>
</FrameLayout>
